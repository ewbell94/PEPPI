#!/bin/tcsh -f
#PBS -e !ERRFILE!
#PBS -o !OUTFILE!
#PBS -l !WALLTIME!
#PBS -l !NODE!

set hostname=`hostname`
set date=`date`
set pwd=`pwd`;
echo hostname: $hostname > !RECORDDIR!/ware_!TAG!
echo starting time: $date >> !RECORDDIR!/ware_!TAG!
echo pwd: $pwd >> !RECORDDIR!/ware_!TAG!

!JOBNAME!

set date=`date`
echo endding time: $date >> !RECORDDIR!/ware_!TAG!
