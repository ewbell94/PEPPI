#!/bin/tcsh -f
#SBATCH --job-name="!TAG!"
#SBATCH --output="!OUTFILE!"
#SBATCH --error="!ERRFILE!"
#SBATCH --partition=!Q!
#SBATCH --nodes=1
#SBATCH --mem=!MEM!
#SBATCH --ntasks-per-node=1
#SBATCH -t !WALLTIME!
#SBATCH -A !ACCOUNT!

#PBS -e !ERRFILE!
#PBS -o !OUTFILE!
#PBS -l !WALLTIME!
#PBS -l !NODE!

set hostname=`hostname`
set date=`date`
set pwd=`pwd`;
echo hostname: $hostname > !RECORDDIR!/ware_!TAG!
echo starting time: $date >> !RECORDDIR!/ware_!TAG!
echo pwd: $pwd >> !RECORDDIR!/ware_!TAG!

!JOBNAME!

set date=`date`
echo endding time: $date >> !RECORDDIR!/ware_!TAG!
